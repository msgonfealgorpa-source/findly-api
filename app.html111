async function runSearch() {
    const q = document.getElementById('s-input').value.trim();
    const status = document.getElementById('status');
    const resultsBox = document.getElementById('results');
    const personalityContainer = document.getElementById('personality-container');

    if (!q) return;

    const T = dict[lang]?.search || dict.en.search;
    const UI = dict[lang]?.ui || dict.en.ui;

    status.style.display = 'block';
    status.innerText = 'üîç ' + UI.slow;
    resultsBox.innerHTML = '';
    personalityContainer.style.display = 'none';

    const userBudget = parseFloat(localStorage.getItem('user_budget')) || 0;

    try {
        let token = null;
        try { if (window.getAuthToken) token = await window.getAuthToken(); } catch (e) {}

        const headers = {};
        if (token) headers['Authorization'] = 'Bearer ' + token;

        const res = await fetch(API + '/search?q=' + encodeURIComponent(q) + '&lang=' + lang, { headers });
        const data = await res.json().catch(() => ({}));

        if (res.status === 429 || data.error === 'ENERGY_EMPTY') {
            const upgradeDict = dict[lang]?.upgrade || dict.ar.upgrade;
            status.innerHTML = '<div class="upgrade-section"><h3>' + upgradeDict.title + '</h3><p style="font-size:0.95rem;opacity:0.9">' + upgradeDict.message + '</p><button class="upgrade-btn" onclick="openUpgrade()">' + upgradeDict.upgradeBtn + '</button></div>';
            return;
        }

        if (!res.ok) throw new Error(data.message || ('Server error: ' + res.status));
        status.style.display = 'none';

        if (!data.results || !data.results.length) {
            status.style.display = 'block';
            status.innerText = UI.noResults;
            return;
        }

        if (data.personality) {
            personalityContainer.innerHTML = renderPersonalityBadge(data.personality);
            personalityContainer.style.display = 'block';
        }

        if (data.results[0]) updateAffiliateCard(data.results[0]);

        data.results.forEach(function (p) {
            const intel = p.intelligence || {};
            const verdict = intel.finalVerdict || {};
            const priceIntel = intel.priceIntel || {};
            const valueIntel = intel.valueIntel || {};
            const forecast = intel.forecastIntel || {};
            const trust = intel.trustIntel || {};

            let strategicBadge = '';
            let strategicColor = '#3b82f6';

            if (verdict.decision === 'BUY_NOW') { strategicBadge = 'üü¢ ' + T.smartDecision; strategicColor = '#10b981'; }
            else if (verdict.decision === 'WAIT') { strategicBadge = '‚è≥ ' + T.preferWait; strategicColor = '#f59e0b'; }
            else if (verdict.decision === 'WAIT_PRICE_DROP') { strategicBadge = 'üìâ ' + T.waitPriceDrop; strategicColor = '#6366f1'; }
            else if (verdict.decision === 'OVERPRICED') { strategicBadge = 'üî¥ ' + T.priceHigh; strategicColor = '#ef4444'; }

            const bestLink = verdict.bestLink || p.link;
            const safeLink = bestLink && bestLink.startsWith('http') ? bestLink : null;
            const priceVal = parseFloat(String(p.price).replace(/[^\d.]/g, '')) || 0;

            let budgetClass = '';
            let budgetBadge = '';
            if (userBudget > 0 && priceVal > userBudget) { budgetClass = 'over-budget'; budgetBadge = '<div class="budget-alert">‚ö†Ô∏è ' + UI.over + '</div>'; }

            let priceEval = T.weak;
            if (priceIntel.score >= 70) priceEval = T.excellent;
            else if (priceIntel.score >= 50) priceEval = T.good;

            let timingEval = T.stableTxt;
            if (forecast.trend === 'down') timingEval = T.wait;
            else if (forecast.trend === 'up') timingEval = T.mayRise;

            let trustEval = T.safe;
            if ((trust.overallRisk || trust.riskScore || 0) > 50) trustEval = T.risk;

            let behaviorEval = T.general;
            if ((valueIntel.learningBoost || 0) > 0) behaviorEval = T.suitable;

            const card = document.createElement('div');
            card.className = 'product-card ' + budgetClass;

            let cardHtml = budgetBadge + '<img src="' + (p.thumbnail || '') + '" onerror="this.src=\'https://via.placeholder.com/200\'"><h3>' + (p.title || '‚Äî') + '</h3><div class="price">$' + (priceVal || '‚Äî') + '</div>';

            if (intel.dealQuality) cardHtml += renderDealQuality(intel.dealQuality);
            cardHtml += renderScoreGrid(intel);
            cardHtml += '<div class="sage-quick-brains"><div class="brain-item good">üí∞ ' + T.price + ' <span>' + priceEval + '</span></div><div class="brain-item ' + (forecast.trend === 'down' ? 'wait' : 'safe') + '">üìà ' + T.timing + ' <span>' + timingEval + '</span></div><div class="brain-item ' + ((trust.overallRisk || trust.riskScore || 0) > 50 ? 'risk' : 'safe') + '">üõ°Ô∏è ' + T.confidence + ' <span>' + trustEval + '</span></div><div class="brain-item learn">üß† ' + T.behavior + ' <span>' + behaviorEval + '</span></div></div>';

            if (intel.fakeDeal && intel.fakeDeal.isSuspicious) cardHtml += renderFakeDealAlert(intel.fakeDeal);
            if (intel.merchantTrust) cardHtml += renderMerchantTrust(intel.merchantTrust);

            cardHtml += '<div class="analysis-engine"><span class="analysis-label">' + (verdict.emoji || 'ü§ñ') + ' ' + (verdict.title || '') + '</span><div>' + (verdict.reason || '') + '</div></div>';

            if (verdict.decision) {
                cardHtml += '<div style="margin-top:10px;padding:10px;border-radius:10px;background:rgba(255,255,255,0.05);border:1px solid ' + strategicColor + '"><div style="font-weight:bold;color:' + strategicColor + '">' + strategicBadge + '</div><div style="font-size:0.9rem;opacity:0.9">' + (verdict.reason || '') + '</div>' + (verdict.savingsPercent ? '<div style="margin-top:5px">üí∞ ' + T.saving + ': <strong>' + verdict.savingsPercent + '%</strong></div>' : '') + (verdict.bestStore ? '<div style="margin-top:5px">üè™ ' + T.bestStore + ': <strong>' + verdict.bestStore + '</strong>' + (verdict.bestPrice ? ' - $' + verdict.bestPrice : '') + '</div>' : '') + '<div style="margin-top:5px">üéØ ' + T.confidenceScore + ': <strong>' + (verdict.confidence || 0) + '%</strong></div></div>';
            }

            cardHtml += '<button class="action-btn" onclick="addToWatch(\'' + p.title.replace(/'/g, "\\'") + '\',\'' + priceVal + '\',\'' + (safeLink || '') + '\')" style="width:100%;margin-top:10px;background:#f59e0b;color:white">üîî ' + T.watchPrice + '</button>';

            if (safeLink) cardHtml += '<a class="action-btn buy-now" href="' + API + '/go?url=' + encodeURIComponent(safeLink) + '" target="_blank" style="display:flex;margin-top:10px">' + T.buy + '</a>';
            else cardHtml += '<button class="action-btn buy-now" disabled style="margin-top:10px;opacity:0.5">' + T.linkUnavailable + '</button>';

            const analyzeData = { verdict, priceIntel, valueIntel, forecastIntel: forecast, trustIntel: trust, merchantTrust: intel.merchantTrust || {}, fakeDeal: intel.fakeDeal || {} };
            cardHtml += '<button class="action-btn analyze-btn" style="width:100%;margin-top:10px" onclick="openAnalysis(' + htmlspecialchars(JSON.stringify(analyzeData)) + ')">' + T.analyze + '</button>';

            card.innerHTML = cardHtml;
            resultsBox.appendChild(card);
        });

    } catch (e) {
        status.style.display = 'block';
        status.innerText = UI.errorFetching + ': ' + e.message;
    }
}

window.closeAnalysisModal = function() { document.getElementById('analysis-modal').style.display = 'none'; };

window.openAnalysis = function(data) {
    try {
        const parsed = typeof data === 'string' ? JSON.parse(data) : data;
        const T = dict[lang]?.analysis || dict.ar.analysis;
        let html = '<div class="intel-section"><h4>' + T.market + '</h4><p>' + T.avgPrice + ': $' + (parsed.priceIntel?.avgPrice || '---') + '</p><p>' + T.competitors + ': ' + (parsed.priceIntel?.competitorCount || 0) + '</p></div>';
        html += '<div class="intel-section"><h4>' + T.deal + '</h4><p>' + T.dealScore + ': ' + (parsed.verdict?.confidence || 0) + '%</p></div>';
        html += '<div class="intel-section"><h4>' + T.forecast + '</h4><p>' + T.trend + ': ' + (parsed.forecastIntel?.trend || '---') + '</p><p>' + T.expectedPrice + ': $' + (parsed.forecastIntel?.expectedPrice || '---') + '</p></div>';
        html += '<div class="intel-section"><h4>' + T.trustRisks + '</h4><p>' + (parsed.trustIntel?.risks?.length ? parsed.trustIntel.risks.join(', ') : T.noClearRisks) + '</p></div>';
        document.getElementById('analysis-content-body').innerHTML = html;
        document.getElementById('analysis-modal').style.display = 'flex';
    } catch (e) {}
};

// ===== WATCH FUNCTIONS =====
window.addToWatch = async function(name, price, link) {
    const watchDict = dict[lang]?.watch || dict.ar.watch;
    const userEmail = prompt(watchDict.enterEmail);
    if (!userEmail || !userEmail.includes('@')) return;
    const numericPrice = parseFloat(String(price).replace(/[^\d.]/g, '')) || 0;
    try {
        const response = await fetch(API + '/alerts', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email: userEmail, productName: name, targetPrice: numericPrice * 0.9, currentPrice: numericPrice, productLink: link, lang: lang, uid: localStorage.getItem('findly_uid') || 'guest' })
        });
        if (response.ok) alert(watchDict.activated);
        else alert(watchDict.serverError + response.status);
    } catch (error) { alert(watchDict.connectionFailed); }
};

function updateAffiliateCard(product) {
    const safeLink = product.intelligence?.finalVerdict?.bestLink || product.link;
    const affImage = document.getElementById('affImage');
    const affTitle = document.getElementById('affTitle');
    const affBtn = document.getElementById('affBtn');
    const affiliateCard = document.getElementById('affiliateCard');
    
    if (affImage) affImage.src = product.thumbnail || product.image || '';
    if (affTitle) affTitle.innerText = product.title || '';
    if (affBtn) affBtn.href = API + '/go?url=' + encodeURIComponent(safeLink || '');
    if (affiliateCard) affiliateCard.style.display = 'block';
}

// ===== OTHER FUNCTIONS =====
window.copyInvite = function() {
    const uid = localStorage.getItem('findly_uid') || 'guest';
    const link = location.origin + location.pathname + '?ref=' + uid;
    const inviteDict = dict[lang]?.invite || dict.ar.invite;
    navigator.clipboard.writeText(link).then(function() { alert(inviteDict.copied); }).catch(function() { alert(inviteDict.copyFailed + link); });
};

window.openUpgrade = async function() {
    const uid = localStorage.getItem('findly_uid') || 'guest_' + Date.now();
    const upgradeDict = dict[lang]?.upgrade || dict.ar.upgrade;
    try {
        const res = await fetch(API + '/create-payment', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ uid: uid }) });
        const data = await res.json();
        if (data.url) window.open(data.url, '_blank');
        else alert(upgradeDict.paymentUnavailable);
    } catch (e) { alert(upgradeDict.paymentError); }
};

window.saveSet = function() {
    localStorage.setItem('fn', document.getElementById('in-name').value);
    localStorage.setItem('user_budget', document.getElementById('in-budget').value);
    document.getElementById('p-modal').style.display = 'none';
    update();
};

window.toggleMode = function() { document.body.classList.toggle('light-mode'); };
window.toggleLMenu = function() { const m = document.getElementById('l-menu'); m.style.display = m.style.display === 'block' ? 'none' : 'block'; };
window.setLang = function(l) { lang = l; localStorage.setItem('findly_lang', l); document.getElementById('l-menu').style.display = 'none'; update(); updateChatUI(); updateAuthUI(); initVoiceSearch(); };
window.openProfile = function() { document.getElementById('p-modal').style.display = 'flex'; document.getElementById('in-name').value = localStorage.getItem('fn') || ''; document.getElementById('in-budget').value = localStorage.getItem('user_budget') || ''; };
window.quickSearch = function(q) { document.getElementById('s-input').value = q; runSearch(); };
window.quickFilter = function(type) { document.getElementById('s-input').value += ' ' + type; };
window.toggleWatchList = function() { const m = document.getElementById('w-modal'); m.style.display = m.style.display === 'flex' ? 'none' : 'flex'; };

function update() {
    const d = dict[lang] || dict.en || dict.ar;
    if (!d) return;
    
    const userName = localStorage.getItem('fn') || (lang === 'ar' ? 'ÿ£ŸäŸáÿß ÿßŸÑÿ®ÿßÿ≠ÿ´' : 'Seeker');
    
    const elements = {
        'txt-energy': d.ui.energy, 'greeting': d.ui.welcome + ' ' + userName,
        'txt-title': d.ui.title, 'txt-sub': d.ui.sub, 'hero-tagline': d.ui.hero_tagline,
        'txt-deep': d.ui.deep, 'tag-cheap': d.ui.cheap, 'tag-top': d.ui.top, 'tag-new': d.ui.new,
        'p-head': d.ui.p_head, 'lbl-name': d.ui.lbl_name, 'lbl-budget': d.ui.lbl_budget,
        'cat-game': d.ui.game, 'cat-beauty': d.ui.beauty, 'cat-home': d.ui.home,
        'cat-c1': d.ui.c1, 'cat-c2': d.ui.c2, 'cat-c4': d.ui.c4, 'txt-watch-title': d.ui.watchTitle,
        'btn-save-settings': d.ui.saveChanges, 'btn-close-profile': d.ui.close,
        'btn-close-watch': d.ui.close, 'btn-close-analysis': d.ui.close,
        'analysis-modal-title': d.analysis.title, 'aff-offer': d.ui.affiliateOffer,
        'affBtn': d.ui.buyNowAffiliate, 'inviteText': d.invite.text,
        'footer-privacy': d.auth.privacy, 'footer-terms': d.auth.terms, 'footer-about': d.auth.about
    };
    
    for (const [id, value] of Object.entries(elements)) {
        const el = document.getElementById(id);
        if (el && value !== null) el.innerText = value;
    }
    
    const searchInput = document.getElementById('s-input');
    if (searchInput) searchInput.placeholder = d.ui.searchPlaceholder;
    
    const mainHtml = document.getElementById('main-html');
    if (mainHtml) { mainHtml.lang = lang; mainHtml.dir = lang === 'ar' ? 'rtl' : 'ltr'; }
    
    const inName = document.getElementById('in-name');
    const inBudget = document.getElementById('in-budget');
    if (inName) inName.placeholder = d.ui.lbl_name;
    if (inBudget) inBudget.placeholder = d.ui.lbl_budget;
}

function updateAuthUI() {
    const d = dict[lang] || dict.ar;
    if (!d || !d.auth) return;
    
    const loginSubtitle = document.getElementById('login-subtitle');
    const btnLogin = document.getElementById('btn-login');
    const txtOr = document.getElementById('txt-or');
    const txtGoogleBtn = document.getElementById('txt-google-btn');
    
    if (loginSubtitle) loginSubtitle.textContent = d.auth.loginSubtitle;
    if (btnLogin) btnLogin.querySelector('span').textContent = d.auth.login;
    if (txtOr) txtOr.textContent = d.auth.or;
    if (txtGoogleBtn) txtGoogleBtn.textContent = d.auth.googleBtn;
    
    const signupTitle = document.getElementById('signup-title');
    const signupSubtitle = document.getElementById('signup-subtitle');
    const btnRegister = document.getElementById('btn-register');
    const txtOrSignup = document.getElementById('txt-or-signup');
    const txtGoogleBtnSignup = document.getElementById('txt-google-btn-signup');
    
    if (signupTitle) signupTitle.textContent = d.auth.signupTitle;
    if (signupSubtitle) signupSubtitle.textContent = d.auth.signupSubtitle;
    if (btnRegister) btnRegister.querySelector('span').textContent = d.auth.register;
    if (txtOrSignup) txtOrSignup.textContent = d.auth.or;
    if (txtGoogleBtnSignup) txtGoogleBtnSignup.textContent = d.auth.googleBtnSignup;
    
    const loginFooterText = document.getElementById('login-footer-text');
    const signupFooterText = document.getElementById('signup-footer-text');
    
    if (loginFooterText) {
        loginFooterText.innerHTML = d.auth.noAccount + ' <a id="go-to-signup">' + d.auth.createAccount + ' <i class="fa-solid fa-arrow-left"></i></a>';
        const goToSignup = document.getElementById('go-to-signup');
        if (goToSignup) goToSignup.addEventListener('click', switchToSignup);
    }
    
    if (signupFooterText) {
        signupFooterText.innerHTML = d.auth.haveAccount + ' <a id="go-to-login">' + d.auth.loginNow + ' <i class="fa-solid fa-arrow-left"></i></a>';
        const goToLogin = document.getElementById('go-to-login');
        if (goToLogin) goToLogin.addEventListener('click', switchToLogin);
    }
    
    const loginEmail = document.getElementById('login-email');
    const loginPassword = document.getElementById('login-password');
    const signupName = document.getElementById('signup-name');
    const signupEmail = document.getElementById('signup-email');
    const signupPassword = document.getElementById('signup-password');
    
    if (loginEmail) loginEmail.placeholder = d.auth.email;
    if (loginPassword) loginPassword.placeholder = d.auth.password;
    if (signupName) signupName.placeholder = d.auth.fullName;
    if (signupEmail) signupEmail.placeholder = d.auth.email;
    if (signupPassword) signupPassword.placeholder = d.auth.password;
}

function switchToSignup() {
    const loginView = document.getElementById('login-view');
    const signupView = document.getElementById('signup-view');
    loginView.classList.remove('active');
    loginView.classList.add('exit-left');
    setTimeout(() => { loginView.classList.remove('exit-left'); signupView.classList.add('active'); }, 200);
}

function switchToLogin() {
    const loginView = document.getElementById('login-view');
    const signupView = document.getElementById('signup-view');
    signupView.classList.remove('active');
    signupView.classList.add('exit-left');
    setTimeout(() => { signupView.classList.remove('exit-left'); loginView.classList.add('active'); }, 200);
}

document.addEventListener('click', function(e) {
    if (e.target.classList.contains('modal') || e.target.classList.contains('analysis-modal')) e.target.style.display = 'none';
});

window.onload = function() {
    update();
    updateAuthUI();
    initVoiceSearch();
    initChat();
    if (location.href.includes('upgrade-success')) {
        localStorage.setItem('findly_pro', 'true');
        const upgradeDict = dict[lang]?.upgrade || dict.ar.upgrade;
        alert(upgradeDict.successTitle + '\n' + upgradeDict.successMessage);
    }
};

document.addEventListener("DOMContentLoaded", function() {
    const goToSignup = document.getElementById('go-to-signup');
    const goToLogin = document.getElementById('go-to-login');
    if (goToSignup) goToSignup.addEventListener('click', switchToSignup);
    if (goToLogin) goToLogin.addEventListener('click', switchToLogin);
});
</script>
